package classe2;

public class Funcionario {
	String nome;
	String funcao;
	double salario;

	
	// Construtor
	Funcionario(String n, String f,double s) {
		nome = n;
		funcao = f;
		salario = s;
	}

	String formatarFuncionario() {
		return String.format("Seu nome é: " + nome + "\n" +  "Seu Cargo é: " + funcao);
	}
}
