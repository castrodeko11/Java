package classe;

import java.util.Scanner;

public class DataTeste {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Data nascimento = new Data();
		Data casamento = new Data(20,05,1985);

		System.out.println("Status da sua Fomração \n");
		System.out.printf("Digite a dia da sua formação: ");
		nascimento.dia = scanner.nextInt();

		System.out.printf("Digite a mês da sua formação: ");
		nascimento.mes = scanner.nextInt();

		System.out.printf("Digite a ano da sua formação: ");
		nascimento.ano = scanner.nextInt();

		System.out.println("\nData completa da Fomração\n ");
		System.out.println("A data da sua Formação é: " + nascimento.formatar());
		System.out.println("A data da sua Formação é: " + casamento.formatar());
//		System.out.println(nascimento.dia + "/" + nascimento.mes + "/" + nascimento.ano);
//		System.out.printf("%d/%d/%d",nascimento.dia,nascimento.mes,nascimento.ano);

		scanner.close();
	}

}
